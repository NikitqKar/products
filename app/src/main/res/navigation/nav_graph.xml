<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.nick.android.products.feature.main.MainFragment"
        android:label="MainFragment"
        tools:layout="@layout/main_fragment" >

        <action
            android:id="@+id/action_Main_to_Detail"
            app:destination="@id/detailFragment">
        </action>
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.nick.android.products.feature.detail.DetailFragment"
        android:label="DetailFragment"
        tools:layout="@layout/detailed_fragment">

        <argument
            android:name="product"
            app:argType="com.nick.android.products.data.entity.Product"
            app:nullable="false"/>
    </fragment>
</navigation>